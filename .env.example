# Application Settings
APP_NAME=Vietnamese Environmental Law RAG
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://raguser:ragpass@postgres:5432/ragdb
REDIS_URL=redis://redis:6379/0
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ragpassword123

# Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_CHUNKS=chunks
QDRANT_COLLECTION_ENTITIES=entities

# LLM Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=vistral:7b-chat-q4_K_M
OLLAMA_TIMEOUT=120

# Embedding Model
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=32

# RAG Settings
CHUNK_SIZE=1024
CHUNK_OVERLAP=128
TOP_K_RETRIEVAL=20
MAX_CONTEXT_TOKENS=8000
GRAPH_TRAVERSAL_DEPTH=3

# Security
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/app/uploads

# Monitoring
ENABLE_METRICS=true
